{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": true, // 生成类型声明文件 (.d.ts)
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
